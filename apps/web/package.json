    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.36.1",
    "formik": "^2.4.6",
    "lucide-react": "^0.363.0",
    "next": "^14.1.1",
    "next-auth": "^4.24.7",
    "pg": "^8.13.1",
    "postgres": "^3.4.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "yup": "^1.4.0",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@core/eslint-config": "workspace:*",
    "@core/typescript-config": "workspace:*",
