{
  "name": "@core/ui",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./components/*": [
      "./src/components/ui/*.tsx",
      "./src/components/ui/*.ts"
    ],
    "./card": "./src/components/card.tsx",
    "./code": "./src/components/code.tsx",
    ".": {
      "import": "./dist/ui.mjs",
      "require": "./dist/ui.umd.js"
    },
    "./lib/*": "./src/lib/*.ts",
    "./globals.css": "./app/globals.css",
    "./configuration": "./dist/configuration/index.js",
    "./typography.css": "./dist/typography.css",
    "./ui.css": "./dist/ui.css",
    "./postcss.config": "./postcss.config.js",
    "./tailwind.config": "./tailwind.config.js"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "build": "tsc && vite build && pnpm build:css",
    "build:css": "tailwindcss -o ./dist/ui.css --minify",
    "generate:component": "turbo gen react-component",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.2.25",
    "@core/eslint-config": "workspace:*",
    "@core/typescript-config": "workspace:*",
    "@storybook/addon-essentials": "^8.0.5",
    "@storybook/addon-interactions": "^8.0.5",
    "@storybook/addon-links": "^8.0.5",
    "@storybook/addon-onboarding": "^8.0.5",
    "@storybook/blocks": "^8.0.5",
    "@storybook/react": "^8.0.5",
    "@storybook/react-vite": "^8.0.5",
    "@storybook/test": "^8.0.5",
    "@turbo/gen": "^1.12.4",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-storybook": "^0.8.0",
    "postcss": "^8.4.38",
    "react": "^18.2.0",
    "storybook": "^8.0.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3",
    "vite": "^5.2.8"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.6.0",
    "formik": "^2.4.6",
    "lucide-react": "^0.363.0",
    "react-day-picker": "^8.10.0",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7",
    "yup": "^1.4.0"
  }
}
