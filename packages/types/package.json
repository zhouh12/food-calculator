{
  "name": "@core/types",
  "version": "0.0.0",
  "private": true,
  "description": "Shared TypeScript types for mobile and web applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./client": {
      "types": "./src/client/index.ts",
      "import": "./src/client/index.ts",
      "require": "./src/client/index.ts"
    },
    "./server": {
      "types": "./src/server/index.ts",
      "import": "./src/server/index.ts",
      "require": "./src/server/index.ts"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint . --max-warnings 0"
  },
  "devDependencies": {
    "@core/eslint-config": "workspace:*",
    "@core/typescript-config": "workspace:*",
    "typescript": "^5.3.3"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
